# Polybar #
#================================================

# Start polybar 
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# Rofi launchers
#================================================

## Rofi application launcher
bindsym $sup+space exec rofi -modi drun -show drun \
		-config ~/.config/rofi/rofidmenu.rasi

## Rofi window menu ($sup+tab)
bindsym $sup+Tab exec rofi -show window \
		-config ~/.config/rofi/rofidmenu.rasi

# Power Menu
bindsym $sup+p exec ~/.config/i3/scripts/powermenu \
		-config ~/.config/rofi/rofidmenu.rasi

# Power Profiles menu switcher (rofi)
bindsym $sup+Shift+p exec ~/.config/i3/scripts/power-profiles \
		-config ~/.config/rofi/rofidmenu.rasi

# Rofi calculator
bindsym $sup+c exec rofi -show calc -modi calc -no-show-match -no-sort > /dev/null \
		-config ~/.config/rofi/rofidmenu.rasi

# Rofi Wifi
bindsym $sup+w exec ~/.config/i3/scripts/wifimenu \
		-config ~/.config/rofi/rofidmenu.rasi

