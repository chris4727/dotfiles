[user]
	email = <email>
	name = <Name>
[init]
	defaultBranch = main
[alias]
	st = status -sb
	ll = log --oneline
	cm = commit -m
	vd = difftool -t vimdiff -y
	cf = config --global -l
	search = !git rev-list --all | xargs git grep -F
[core]
	editor = $EDITOR
[push]
  autoSetupRemote = true      # Auto track remote
  default = current           # Default branch current
  followTags = true
[pull]
  default = current           # Default branch current
  rebase = true
[rebase]
  autoStash = true
  missingCommitsCheck = warn
[log]
  abbrevCommit = true         # Shorten commit hash
  graphColors = green,blue,yellow,cyan,magenta,red
[color "decorate"]
  HEAD = magenta
  branch = blue
  tag = yellow
  remoteBranch = red
[branch]
  sort = -committerdate
[color "branch"]
  current = magenta
  local = default
  remote = yellow
  upstream = green
  plain = blue
[tag]
  sort = -taggerdate

